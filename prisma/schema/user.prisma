model User {
  id               Int       @id @default(autoincrement())
  fullName         String
  email            String    @unique
  password         String
  role             Role      @default(USER)
  profileImage     String?
  bio              String?
  travelInterests  String[]
  visitedCountries String[]
  currentLocation  String?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model Admin {
  id        Int       @id @default(autoincrement())
  fullName  String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
